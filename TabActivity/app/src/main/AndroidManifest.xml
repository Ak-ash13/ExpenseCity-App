<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.tabactivity">

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/travel"
        android:label="ExpenseCity"
        android:roundIcon="@drawable/travel"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".UpdateTripActivity"></activity>
        <activity android:name=".ExpenseUpdateActivity" />
        <activity android:name=".CreateTripActivity" />
        <activity
            android:name=".ViewAllTripActivity"
            android:label="All Trips " />
        <activity
            android:name=".AddExpenseActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".AddTripActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TestActivity" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/AppCompatTheme" />
    </application>

</manifest>